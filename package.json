{
  "name": "marathon-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "14.15.5",
    "npm": "^6.14"
  },
  "scripts": {
    "prestart": "npm run check-commit",
    "start": "nodemon",
    "dev": "nodemon",
    "build": "tsc -b && copyfiles .prettierrc.js dist",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|md|mdx)\"",
    "lint": "eslint . --ext js --ext jsx --ext ts --ext tsx",
    "lint:fix": "npm run lint -- --fix",
    "check-commit": "npm run type-check && npm run lint:fix && npm run prettier",
    "ts-node": "ts-node --compiler-options '{\"module\":\"CommonJS\"}'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perimetre/marathon-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/perimetre/marathon-backend/issues"
  },
  "homepage": "https://github.com/perimetre/marathon-backend#readme",
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "^4.17.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "husky": "^7.0.0"
  }
}
